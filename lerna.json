{
  "command": {
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "*.test.*",
        "*.snap.*",
        "*-snap.*",
        "*.md",
        "*.mdx",
        "*.txt",
        "*.config.*",
        "*.yml",
        "*.storyshot",
        "*.stories.*",
        "*.argTypes.*",
        "package.json",
        "yarn.lock",
        ".editorconfig",
        ".eslintrc.js",
        "renovate.json",
        "**/__mocks__/**",
        "**/__fixtures__/**",
        ".cicd/**",
        ".github/**",
        "packages/web/.storybook/**",
        "packages/web/bin/**",
        "vulnerabilidades.json"
      ],
      "message": "chore(release): publish %s via lerna [skip-ci]"
    }
  },
  "npmClient": "yarn",
  "packages": [
    "packages/styles",
    "packages/web",
    "packages/react"
  ],
  "useWorkspaces": true,
  "version": "independent"
}
